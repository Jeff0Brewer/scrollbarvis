<Window x:Class="scrollbarvis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:scrollbarvis"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">
    <Canvas Name="canv" Loaded="canvasloaded">
        <Rectangle Name="bg" Width="1501" Height="4330">
            <Rectangle.Fill>
                <ImageBrush Stretch="Fill" ImageSource="TaskImage.jpg"></ImageBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image Name="heatmap" Width="1501" Height="4330" Visibility="Hidden"></Image>
        <TextBlock Name="test" Canvas.Left="0" Canvas.Top="0" Text="0"></TextBlock>
    </Canvas>
</Window>
